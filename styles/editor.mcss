Editor {
  background: #222
  flex: 1;
  position: relative
  display: flex

  div {
    height: inherit
  }

}

RawEditor {

  display: flex
  position: relative;
  width: 300px

  textarea {
    background: transparent
    color: #CCC
    font-size: 15px
    border: none
    padding: 20px
    display: block
    width: 100%
  }
}

SampleEditor {

  flex: 1

  background: #555
  position: relative;

  svg {
    display:block
    position: absolute
    top:0; left:0; right:0
    height: 100%
  }

  div.transpose {
    position: absolute  !important;
    opacity: 0.3;
    bottom: 50px;
    left: 10px;

    :hover {
      opacity: 0.8;
    }

    -active {
      opacity: 0.8;
    }

  }

  div.gain {
    position: absolute  !important;
    opacity: 0.3;
    bottom: 50px;
    right: 10px;

    :hover {
      opacity: 0.8;
    }

    -active {
      opacity: 0.8;
    }

  }


  input.start { 
    $slider
    
    cursor: e-resize;

    top:0; left:0; right:0
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(34,34,34,1)), color-stop(100%,rgba(34,34,34,0)))
    
    ::-webkit-slider-thumb {
      :after {
        content: 'start'
        border-top-left-radius: 0
        border-bottom-left-radius: 0
      }
    }

  }

  input.end { 
    $slider

    cursor: w-resize;

    bottom:0; left:0; right:0
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(34,34,34,0)), color-stop(100%,rgba(34,34,34,1)))
    
    ::-webkit-slider-thumb {

      :after {
        content: 'end'
        margin-left:-40px;
        border-top-right-radius: 0
        border-bottom-right-radius: 0
      }

    }

  }

}

$slider {
  outline: none
  position: absolute;

  height:40px;
  width: 100%

  margin: 0

  -webkit-appearance: none;

  ::-webkit-slider-thumb {
    -webkit-appearance: none;
    position: relative;
    top: 0px;
    z-index: 1;
    width: 0px;
    height: 40px;
  }

  ::-webkit-slider-thumb {
    :after {
      pointer-events: none
      background: #AAA
      box-shadow: 0 0 20px #222;
      border-radius: 40px;
      display:block;
      position: absolute;
      padding:10px
      margin: 3px 0
      color: #555
    }
  }
}