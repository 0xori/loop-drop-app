Holder {

  background: #555;
  height: 25vw;

  display: flex

  div {

    display: flex
    flex: 1

    -selected {
      border-bottom-left-radius: 10px
      border-bottom-right-radius: 10px
      overflow: hidden
      box-shadow: 0 0px 10px #222
      position: relative

      background: #222;

      div {
        border-color: #222

        div {
          border-color: #222
        }
      }
    }

    height: 100%;

    div {
      height: 100%;
    }
  }
}